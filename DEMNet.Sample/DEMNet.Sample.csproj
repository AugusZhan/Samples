  <ItemGroup>
    <Compile Remove="Samples\OldSamples.cs" />
    <Compile Remove="Samples\ReprojectionSamples.cs" />
    <Compile Remove="Samples\TextureSamples.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".DS_Store" />
    <None Remove="._.DS_Store" />
